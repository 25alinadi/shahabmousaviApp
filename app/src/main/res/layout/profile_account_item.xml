<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/constraint_accountItem_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_accountItem_icon"
        android:tint="@color/prussian_blue"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/bookmark_plus"
        android:layout_centerVertical="true"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txt_accountItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:layout_toLeftOf="@id/img_accountItem_icon"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray400"
        android:layout_below="@id/txt_accountItem_title"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:tint="@color/prussian_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
</RelativeLayout>