<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/shape_bg_answer_item"
    android:id="@+id/rel_analysisItem_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:elevation="1dp">

    <TextView
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/cool_gray"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginRight="8dp"
        android:id="@+id/txt_analysisItem_createdate"
        tools:text="تاریخ ایجاد : 10-10-98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_best_user_item"
        android:id="@+id/txt_analysisItem_id"
        tools:text="12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/txt_analysisItem_id"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/txt_analysisItem_createdate"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        tools:text="سبد تحلیل (#۱۲)"
        android:id="@+id/txt_analysisItem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v_analysisItem"
        android:layout_below="@id/txt_analysisItem_title"
        android:background="@color/gray400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/cool_gray"
        android:gravity="right"
        android:id="@+id/txt_analysisItem_updatedate"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/v_analysisItem"
        tools:text="تاریخ بروزرسانی : 12/8/98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/v_analysisItem"
       android:layout_alignParentLeft="true"
       android:layout_toRightOf="@id/txt_analysisItem_updatedate"
       app:cardCornerRadius="4dp"
       app:cardBackgroundColor="@color/yellow_primary"
       android:layout_marginTop="4dp"
       android:layout_marginBottom="4dp"
       android:layout_marginLeft="8dp"
       android:id="@+id/cv_analysisItem_status"
       >

       <TextView
           android:paddingRight="8dp"
           android:paddingLeft="8dp"
           android:paddingBottom="4dp"
           android:paddingTop="4dp"
           android:textColor="@color/prussian_blue"
           tools:text="مشاوره"
           android:id="@+id/txt_analysisItem_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_answer_answer_parent"
        android:layout_below="@+id/cv_analysisItem_status"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/shape_answer_answer"
        android:elevation="1dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/txt_analysisItem_description"
            android:padding="8dp"
            android:textColor="@color/prussian_blue"
            android:layout_gravity="right"
            tools:text="توضیح کلی"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
</RelativeLayout>




